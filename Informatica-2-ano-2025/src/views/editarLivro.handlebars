<h2>Editar Livro</h2>

<form action="/livros/{{livro.id}}?_method=PUT" method="POST">
  <label for="titulo">Título:</label>
  <input
    type="text"
    id="titulo"
    name="titulo"
    value="{{livro.titulo}}"
    required
  />

  <label for="autor">Autor:</label>
  <input type="text" id="autor" name="autor" value="{{livro.autor}}" required />

  <label for="genero">Gênero:</label>
  <input
    type="text"
    id="genero"
    name="genero"
    value="{{livro.genero}}"
    required
  />

  <button type="submit">Salvar Alterações</button>
</form>